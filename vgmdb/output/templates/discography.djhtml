{% macro discography(discography, rel="foaf:made schema:album", property=None, rev=None, include_roles=True, include_publisher=False) -%}
      {% if include_roles -%}
      <meta class="metadata">
      {%- for disc in discography -%}
        <div {{disc.link | linkhref | resource_attr(hash='composition')}} typeof="mo:Composition">{{ disc.titles|lang_names(rel='dcterms:title schema:name') }}</div>
        <div {{disc.link | linkhref | resource_attr(hash='performance')}} typeof="mo:Performance">{{ disc.titles|lang_names(rel='dcterms:title schema:name') }}</div>
        <div {{disc.link | linkhref | resource_attr(hash='lyrics')}} typeof="mo:Lyrics"></div>
      {%- for role in disc.roles -%}
        {% if role == 'Composer' -%}
        <div rel="foaf:made" rev="mo:composer schema:creator dcterms:creator"><div {{disc.link | linkhref | resource_attr(hash='composition')}}></div></div>
        <div rel="foaf:made" rev="schema:creator dcterms:creator"><div {{disc.link | linkhref | resource_attr(hash='subject')}}></div></div>
        {% elif role == 'Performer' -%}
        <div rel="mo:performed" rev="mo:performer schema:byArtist"><div {{disc.link | linkhref | resource_attr(hash='performance')}}></div></div>
        <div rev="schema:byArtist"><div {{disc.link | linkhref | resource_attr(hash='subject')}}></div></div>
        {% elif role == 'Lyricist' -%}
        <div rel="foaf:made"><div {{disc.link | linkhref | resource_attr(hash='lyrics')}} typeof="mo:Lyrics"></div></div>
        <div rel="foaf:made"><div {{disc.link | linkhref | resource_attr(hash='subject')}}></div></div>
        {% endif -%}
      {%- endfor -%}
      {%- endfor -%}
      </meta>
      {%- endif -%}
      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <td class="cell-date">Date</td>
            <td class="cell-catalog">Catalog</td>
            <td class="cell-name">Name</td>
            {% if include_roles -%}
            <td class="cell-roles">Roles</td>
            {% endif -%}
            {% if include_publisher -%}
            <td class="cell-publisher">Publisher</td>
            {% endif -%}
          </tr>
        </thead>
        <tbody{{(' rev="%s"'%rev)|safe if rev}}{{(' rel="%s"'%rel)|safe if rel}}>
          {% for disc in discography -%}
          <tr {{disc.link | linkhref | resource_attr}} typeof="mo:Release schema:MusicAlbum"{{(' property="%s"'%property)|safe if property}}>
            <td class="cell-date" property="dcterms:created schema:datePublished" content="{{disc.date or disc.release_date}}" datatype="xsd:date">{{ disc.date or disc.release_date -}}</td>
            <td class="cell-catalog" property="mo:catalogue_number">{{ disc.catalog }}</td>
            <td class="cell-name names">
              {{ disc.titles|lang_names(rel='dcterms:title schema:name')|link_album(disc.link) }}
            </td>
            {% if include_roles -%}
            <td class="cell-roles list">
              <ul class="unstyled">
                {% for role in disc.roles -%}
                <li>{{role}}</li>
                {% endfor -%}
              </ul>
            </td>
            {% endif -%}
            {% if include_publisher -%}
            <td class="cell-publisher names" rel="mo:publisher schema:publisher">
              {% if disc.publisher -%}
              {{ disc.publisher.names | lang_names | link(disc.publisher.link, typeof="foaf:Organization schema:Organization")}}
              {% endif -%}
            </td>
            {% endif -%}
          </tr>
          {% endfor -%}
        </tbody>
      </table>
{% endmacro -%}
